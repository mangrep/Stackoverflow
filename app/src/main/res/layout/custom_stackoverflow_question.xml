<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
   >

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/ListView"
            android:layout_width="match_parent"
            android:background="@drawable/place_item"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/size_byte"
            android:paddingLeft="@dimen/size_word"
            android:paddingRight="@dimen/size_word"
            android:paddingTop="@dimen/size_byte"
            android:weightSum="1">

            <ImageView
                android:id="@+id/profileThumbnail"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/button_action_red"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Thumbnail"
                android:layout_below="@+id/profileThumbnail" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/size_byte"
                android:paddingRight="@dimen/size_word"
                android:paddingTop="@dimen/size_byte">

                <TextView
                    android:id="@+id/questionTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:alpha="0.87"
                    android:gravity="right"
                    android:text="Some Random Question Text goes Here ......"
                    android:maxLines="1"
                    android:padding="@dimen/size_half_byte"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/tagsThumbnail"
                    android:layout_width="@dimen/like_thumbnail_width"
                    android:layout_height="@dimen/like_thumbnail_hight"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:src="@drawable/tag" />

                <TextView
                    android:id="@+id/tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@+id/tagsThumbnail"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="4"
                    android:alpha="0.87"
                    android:text="Some Radom Tag Goes here lab labh ......."
                    android:gravity="right"
                    android:maxLines="1"
                    android:padding="@dimen/size_half_byte"
                    android:textSize="@dimen/size_text_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/size_byte"
                android:paddingLeft="@dimen/size_word"
                android:paddingRight="@dimen/size_word"
                android:paddingTop="@dimen/size_byte"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/likeThumbnail"
                    android:layout_width="@dimen/like_thumbnail_width"
                    android:layout_height="@dimen/like_thumbnail_hight"
                    android:layout_weight="1"
                    android:src="@drawable/social" />

                <ImageView
                    android:id="@+id/shareThumbnail"
                    android:layout_width="@dimen/link_thumbnail_width"
                    android:layout_height="@dimen/link_thumbnail_hight"
                    android:layout_weight="1"
                    android:src="@drawable/link" />

                <ImageView
                    android:id="@+id/upvotesThumbnail"
                    android:layout_width="@dimen/link_thumbnail_width"
                    android:layout_height="@dimen/link_thumbnail_hight"
                    android:layout_weight="1"
                    android:src="@drawable/link" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:text="Time Goes Here"
                    android:gravity="right" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>