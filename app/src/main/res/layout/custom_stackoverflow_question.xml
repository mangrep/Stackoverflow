<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
   >

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">

        <LinearLayout
            android:id="@+id/ListView"
            android:layout_width="match_parent"
            android:background="@drawable/place_item"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:weightSum="2"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/profileThumbnail"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/button_action_red"
                android:layout_margin="8dp" />


        <TextView
            android:id="@+id/questionTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Some Random Question Text goes Here ......"
            android:maxLines="1"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/profileThumbnail" />

        <TextView
            android:id="@+id/tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Some Radom Tag Goes here lab labh ......."
            android:maxLines="1"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/tag"
            android:textSize=   "14sp"
            android:layout_toRightOf="@+id/profileThumbnail"
            android:layout_below="@+id/questionTxt" />

</RelativeLayout>

</LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Thumbnail"
                android:layout_centerVertical="true"
                android:gravity="center" />


                <ImageView
                    android:id="@+id/likeThumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/social"
                    android:layout_toLeftOf="@+id/shareThumbnail"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/shareThumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/link"
                    android:layout_marginLeft="8dp"
                    android:layout_toLeftOf="@+id/upvotesThumbnail"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/upvotesThumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:layout_marginLeft="8dp"
                    android:drawableRight="@drawable/up"
                    android:layout_toLeftOf="@+id/time"
                    android:gravity="center"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="4dp"
                    android:drawableRight="@drawable/time"
                    android:layout_marginRight="8dp"
                    android:text="5 mins back  "
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center" />

            </RelativeLayout>

            </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>